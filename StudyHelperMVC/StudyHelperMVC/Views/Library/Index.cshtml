@model StudyHelperMVC.Models.LibraryViewModel
@{
    ViewData["Title"] = "Библиотека";
}

<h2>Библиотека</h2>

<h3>Предметы</h3>
@if (Model.Subjects.Count == 0)
{
    <p>Пока нет предметов.</p>
}
else
{
    <ul>
        @foreach (var s in Model.Subjects)
        {
            <li>@s.Name (Лекций: @s.Lectures.Count, Упражнений: @s.Exercises.Count)</li>
        }
    </ul>
}

<h3>Лекции</h3>
@if (Model.Lectures.Count == 0)
{
    <p>Пока нет сохранённых конспектов.</p>
}
else
{
    <ul>
        @foreach (var l in Model.Lectures)
        {
            <li>
                <strong>@l.FileName</strong>
                @if (l.Subject != null)
                {
                    <span> — @l.Subject.Name</span>
                }
                <details>
                    <summary>Показать</summary>
                    <pre style="white-space:pre-wrap">@l.Summary</pre>
                </details>
            </li>
        }
    </ul>
}

<h3>Упражнения</h3>
@if (Model.Exercises.Count == 0)
{
    <p>Пока нет сохранённых упражнений.</p>
}
else
{
    <ul>
        @foreach (var e in Model.Exercises)
        {
            <li>
                <strong>@e.FileName</strong>
                @if (e.Subject != null)
                {
                    <span> — @e.Subject.Name</span>
                }
                <details>
                    <summary>Показать</summary>
                    <pre style="white-space:pre-wrap">@e.ExercisesText</pre>
                </details>
            </li>
        }
    </ul>
}
